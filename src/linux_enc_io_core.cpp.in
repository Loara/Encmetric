extern "C"{
#include <unistd.h>
}
#include <encmetric/enc_io_core.hpp>
using namespace adv;

size_t adv::raw_stdin_readbytes(byte *b, size_t siz){
	ssize_t tret = read(STDIN_FILENO, b, siz);
	if(tret < 0){
        if(errno == EAGAIN || errno == EWOULDBLOCK)
            return 0;
        else
            throw IOException{};
	}
	return static_cast<size_t>(tret);
}
size_t adv::raw_stdout_writebytes(const byte *b, size_t siz){
	ssize_t tret = write(STDOUT_FILENO, b, siz);
	if(tret < 0)
        throw IOException{};
    return static_cast<size_t>(tret);
}
size_t adv::raw_stderr_writebytes(const byte *b, size_t siz){
	ssize_t tret = write(STDERR_FILENO, b, siz);
	if(tret < 0)
        throw IOException{};
    return static_cast<size_t>(tret);
}

